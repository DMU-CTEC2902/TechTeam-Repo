@model IEnumerable<FilmReview.Models.Actor>

    <p>
        @if (Session["userAdmin"] != null)
        {
            if (Session["userAdmin"].Equals("admin"))
            {
                @Html.ActionLink("Create New", "Create")
            }
        }
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActorDOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActorGender)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ActorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActorDOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActorGender)
                </td>
              @if (Session["userAdmin"] != null)
              {  
                  if (Session["userAdmin"].Equals("admin"))
                    {
                <td>

                  
                    @Html.ActionLink("Edit", "Edit", new { id = item.ActorId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ActorId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ActorId })
                    
                </td>
                  }
                  else
                  {
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.ActorId })
                    </td>
                  }
              }
              else
              {
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.ActorId })
                    </td>
                }
            </tr>
        }

    </table>
