@model IEnumerable<FilmReview.Models.Movie>

    <p>
       @if (Session["userAdmin"] != null) {
           if (Session["userAdmin"].Equals("admin"))
           {
                @Html.ActionLink("Create New", "Create")
           }
       }
    </p>

    <table class="table">
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.MovieTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre.GenreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director.DirectorName)
            </th>
            <th>
           
            </th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.MovieTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.GenreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director.DirectorName)
            </td>
            @if (Session["userAdmin"] != null)
            { 
                if (Session["userAdmin"].Equals("admin"))
            {
                <td>

               
                    @Html.ActionLink("Edit", "Edit", new { id = item.MovieId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MovieId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MovieId })
               


                </td>
                }
                else
                {
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.MovieId })
                    </td>
                }
            }
            else
            {
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.MovieId })
            </td>
            }
        </tr>
    }
    
    </table>

