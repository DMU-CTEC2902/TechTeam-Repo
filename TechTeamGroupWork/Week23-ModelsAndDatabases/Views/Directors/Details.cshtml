@model FilmReview.Models.Director

    <div>
    <h4>Director</h4>
    <hr />
    <hr />
    <div class="row">
        <div class="col-md-4">
            <img src="~/images/@Model.DirectorImage" />
        </div>
        <div class="col-md-8">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.DirectorName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DirectorName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DirectorDOB)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DirectorDOB)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Movies)
                </dt>
                
                @foreach (var element in Model.Movies)
            {

                    <dd>
                        @Html.ActionLink(element.MovieTitle, "Details", "Movies", new { id = element.MovieId }, null)
                    </dd>
                }



            </dl>
        </div>
        </div>
        </div>
        @if (Session["userAdmin"] != null)
        {
            if (Session["userAdmin"].Equals("admin"))
            {
                <p>

                    @Html.ActionLink("Edit", "Edit", new { id = Model.DirectorId }) |
                    @Html.ActionLink("Back to List", "Index")

                </p>
            }
            else
            {
                <p>
                    @Html.ActionLink("Back to List", "Index")
                </p>
            }
        }
        else
        {
            <p>
                @Html.ActionLink("Back to List", "Index")
            </p>
        }

