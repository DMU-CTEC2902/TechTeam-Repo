@model IEnumerable<FilmReview.Models.Director>

    <p>
        @if (Session["userAdmin"] != null)
        {
            if (Session["userAdmin"].Equals("admin"))
            {
                @Html.ActionLink("Create New", "Create")
            }
        }
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DirectorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirectorDOB)
            </th>
            <th></th>
        </tr>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DirectorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DirectorDOB)
                </td>
               @if (Session["userAdmin"] != null)
               {
                if (Session["userAdmin"].Equals("admin"))
                    {
                <td>

                    @Html.ActionLink("Edit", "Edit", new { id = item.DirectorId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DirectorId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.DirectorId })
                    
                </td>
                   }
                   else
                   {
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.DirectorId })
                    </td>
                   }
               }
               else
               {
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.DirectorId }) 
                    </td>
                }
            </tr>
        }

    </table>
