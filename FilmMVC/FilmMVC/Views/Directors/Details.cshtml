}

<h2>Details</h2>

<div>
    <table>
        <tr>
            <td>
                <img src="@Model.Photo" alt="image" width="150" />
            </td>
        </tr>
    </table>
    <br />
    <br />

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>

